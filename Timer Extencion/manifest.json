{
  "manifest_version": 3,
  "name": "Timer Extension",
  "version": "1.0",
  "description": "A simple timer extension for Chrome",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "alarms",
    "storage"
  ]
}
